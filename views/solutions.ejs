<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/styles.min.css" />
    <link rel="stylesheet" href="/styles.css" />
</head>

<body class="bg-gray-50 min-h-screen">
    <main class="max-w-6xl mx-auto px-4 py-8">
        <!-- Header Section -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">Available Solutions</h1>
            <p class="text-lg text-gray-600 mb-4">
                Complete list of LeetCode problems with C++ solutions
            </p>
            <div class="flex justify-center items-center gap-4 text-sm text-gray-500">
                <span>Total: <strong>
                        <%= totalCount %>
                    </strong> solutions</span>
                <span>â€¢</span>
                <span>Last updated: <strong>
                        <%= lastUpdated %>
                    </strong></span>
            </div>
        </div>

        <!-- Search and Filter Section -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
            <div class="flex flex-col md:flex-row gap-4">
                <div class="flex-1">
                    <input type="text" id="searchInput" placeholder="Search by problem number, title, or difficulty..."
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>
                <div class="flex gap-2">
                    <select id="difficultyFilter"
                        class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        <option value="">All Difficulties</option>
                        <option value="Easy">Easy</option>
                        <option value="Medium">Medium</option>
                        <option value="Hard">Hard</option>
                    </select>
                    <button onclick="clearFilters()"
                        class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-colors">
                        Clear
                    </button>
                </div>
            </div>
        </div>

        <!-- Solutions Grid -->
        <div id="solutionsGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% solutions.forEach(function(solution) { %>
                <div class="solution-card bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow"
                    data-id="<%= solution.id %>" data-title="<%= solution.title.toLowerCase() %>"
                    data-difficulty="<%= solution.difficulty %>">
                    <div class="flex items-start justify-between mb-3">
                        <h3 class="text-lg font-semibold text-gray-900">
                            <a href="<%= solution.route %>" class="hover:text-blue-600 transition-colors">
                                #<%= solution.id %>: <%= solution.title %>
                            </a>
                        </h3>
                        <span class="px-2 py-1 text-xs font-medium rounded-full
                        <%= solution.difficulty === 'Easy' ? 'bg-green-100 text-green-800' : '' %>
                        <%= solution.difficulty === 'Medium' ? 'bg-yellow-100 text-yellow-800' : '' %>
                        <%= solution.difficulty === 'Hard' ? 'bg-red-100 text-red-800' : '' %>">
                            <%= solution.difficulty %>
                        </span>
                    </div>

                    <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                        <%= solution.description %>
                    </p>

                    <div class="space-y-2 text-xs text-gray-500">
                        <div class="flex justify-between">
                            <span>Time Complexity:</span>
                            <code class="bg-gray-100 px-2 py-1 rounded"><%= solution.timeComplexity %></code>
                        </div>
                        <div class="flex justify-between">
                            <span>Space Complexity:</span>
                            <code class="bg-gray-100 px-2 py-1 rounded"><%= solution.spaceComplexity %></code>
                        </div>
                    </div>

                    <div class="mt-4 pt-4 border-t border-gray-100">
                        <a href="<%= solution.route %>"
                            class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium text-sm">
                            View Solution
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7">
                                </path>
                            </svg>
                        </a>
                    </div>
                </div>
                <% }); %>
        </div>

        <!-- No Results Message -->
        <div id="noResults" class="hidden text-center py-12">
            <div class="text-gray-400 mb-4">
                <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.29-1.009-5.824-2.709M15 12a3 3 0 11-6 0 3 3 0 016 0z">
                    </path>
                </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No solutions found</h3>
            <p class="text-gray-500">Try adjusting your search criteria or filters.</p>
        </div>

        <!-- Back to Home -->
        <div class="text-center mt-12">
            <a href="/" class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Home
            </a>
        </div>
    </main>

    <script>
        // Search and filter functionality
        const searchInput = document.getElementById('searchInput');
        const difficultyFilter = document.getElementById('difficultyFilter');
        const solutionsGrid = document.getElementById('solutionsGrid');
        const noResults = document.getElementById('noResults');
        const solutionCards = document.querySelectorAll('.solution-card');

        function filterSolutions() {
            const searchTerm = searchInput.value.toLowerCase();
            const selectedDifficulty = difficultyFilter.value;
            let visibleCount = 0;

            solutionCards.forEach(card => {
                const title = card.dataset.title;
                const difficulty = card.dataset.difficulty;
                const id = card.dataset.id;

                const matchesSearch = !searchTerm ||
                    title.includes(searchTerm) ||
                    id.includes(searchTerm) ||
                    difficulty.toLowerCase().includes(searchTerm);

                const matchesDifficulty = !selectedDifficulty || difficulty === selectedDifficulty;

                if (matchesSearch && matchesDifficulty) {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });

            // Show/hide no results message
            if (visibleCount === 0) {
                solutionsGrid.style.display = 'none';
                noResults.classList.remove('hidden');
            } else {
                solutionsGrid.style.display = 'grid';
                noResults.classList.add('hidden');
            }
        }

        function clearFilters() {
            searchInput.value = '';
            difficultyFilter.value = '';
            filterSolutions();
        }

        // Event listeners
        searchInput.addEventListener('input', filterSolutions);
        difficultyFilter.addEventListener('change', filterSolutions);

        // Initialize
        filterSolutions();
    </script>
</body>

</html>